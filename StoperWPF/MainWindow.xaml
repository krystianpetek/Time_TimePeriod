    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="stackNavbar" Width="60"
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    Background="#252525"  Panel.ZIndex="2">

            <Border x:Name="borderBtnNavbar" Grid.Column="2"
                    Style="{StaticResource btnNavbar}">
                <Label x:Name="btnNavbar"
                       MouseDown="btnNavBar_MouseDown"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                    <Image x:Name="imageNav" Source="Image\menu.png" Width="22" />
                </Label>
            </Border>

            <Label MouseEnter="btnClock_MouseEnter"
                   MouseLeave="btnClock_MouseLeave"
                   MouseDown="btnClock_MouseDown"

                   x:Name="btnClock"
                   Margin="0,7.5,0,0"
                   HorizontalAlignment="Center"
                   Cursor="Hand">
                <Grid Margin="0,7.5,0,7.5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"></ColumnDefinition>
                        <ColumnDefinition Width="6.5"></ColumnDefinition>
                        <ColumnDefinition Width="113.5" />
                    </Grid.ColumnDefinitions>
                    <Image
                    Width="40"
                    Height="40"
                    Source="Image\clock.png" Margin="5,0,5,0" />

                    <Label x:Name="labelClockVisible"
                           Style="{StaticResource labelBtnNavbar}"
                           Content="ZEGAR" />
                </Grid>
            </Label>

            <Label x:Name="btnStoper"
                   MouseEnter="btnStoper_MouseEnter"
                   MouseLeave="btnStoper_MouseLeave"
                   MouseDown="btnStoper_MouseDown"
                   Margin="0,7.5,0,0"
                   HorizontalAlignment="Center"
                   Cursor="Hand">
                <Grid x:Name="Grid2" Margin="0,7.5,0,7.5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"></ColumnDefinition>
                        <ColumnDefinition Width="120"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Image
                    Width="50"
                    Height="50"
                    Source="Image\stoper.png" />

                    <Label x:Name="labelStoperVisible"
                           Style="{StaticResource labelBtnNavbar}"
                           Content="STOPER">
                    </Label>
                </Grid>
            </Label>
        </StackPanel>
        <Border x:Name="belkaNavBar" Grid.Column="1" Background="#1e88e5" Width="1" Panel.ZIndex="2"></Border>
        <Frame Grid.ColumnSpan="3" Grid.Column="0" x:Name="Main" NavigationUIVisibility="Hidden" />
        <Label Grid.Column="3" Content="Krystian Petek" VerticalAlignment="Bottom" HorizontalAlignment="Right" FontSize="12" FontFamily="Segoe UI" Style="{StaticResource labelBtnNavbar}"></Label>
    </Grid>
</Window>