      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WelcomeView">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI" FontSize="20" FontWeight="DemiBold" Foreground="White">W projekcie zrealizowana została własna struktura: </TextBlock>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Segoe UI" FontSize="20" FontWeight="DemiBold" Foreground="White">- <TextBlock Foreground="#86C691">Time</TextBlock> - na jej podstawie działa zegar</TextBlock>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Segoe UI" FontSize="20" FontWeight="DemiBold" Foreground="White">- <TextBlock Foreground="#86C691">TimePeriod</TextBlock> - na niej został zrealizowany stoper</TextBlock>
    </StackPanel>
</Page>